  <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select userid, userName, password, gender, phoneNum, administrator, favoriteType,
    dailyType, email, avator
    from user
    where userid = #{userid,jdbcType=INTEGER}
  </select>

  <select id="selectByUserName"  parameterType="java.lang.String" resultMap="BaseResultMap">
    select userid, userName, password, gender, phoneNum, administrator, favoriteType,
    dailyType, email, avator
    from user
    where userName = #{userName,jdbcType=VARCHAR}
  </select>

  <select id="selectWithAll" resultMap="BaseResultMap">
    select u.userid, u.userName, u.password, u.gender, u.phoneNum, u.administrator, u.favoriteType, u.dailyType, u.email, u.avator,
      t.typeId, t.parentId, t.parentName, t.typeName, t.typeCode,
      bt.typeId  btid,
      bt.parentId btParentId,
      bt.parentName  btParentName,
      bt.typeName btName,
      bt.typeCode btCode
    from user u
      left join book_type t on u.favoriteType = t.typeCode
      left join book_type bt on u.dailyType = bt.typeCode
  </select>
